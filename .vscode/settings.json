{
  "python.analysis.typeCheckingMode": "basic",

  "editor.tabSize": 2,
  "[python]": {
      "editor.tabSize": 4
  },

  "[markdown]": {
    "editor.rulers": [80]
  },

  "files.associations": {
    "*.json": "jsonc",
    "**/css/**/*.css": "css",
    "**/js/**/*.js": "javascript"
  },

  "files.eol": "\n",

  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,

  "isort.check": true,
  "isort.severity": {
      "E": "Warning"
  },

  "search.exclude": {
    ".vscode/*": true,
    "smiggins/templates/js/*": true,
    "smiggins/templates/css/*": true,
    "smiggins/posts/migrations/*": true
  }
}
